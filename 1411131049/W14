#include <stdio.h>
#define SIZE 10
#define R 4
void aver(int b[SIZE][R]);
void swap(int* e1Ptr, int* e2Ptr);
void sort(int c[SIZE][R]);
int main()
{
    int a[SIZE][R] = { {1,28,56,0},
                      {2,60,98,0},
                      {3,70,84,0},
                      {4,85,59,0},
                      {5,54,61,0},
                      {6,89,75,0},
                      {7,91,55,0},
                      {8,68,64,0},
                      {9,52,31,0},
                      {10,71,80,0} };
    printf("未排序成績：\n");
    printf("學號　  數學　計概　平均\n");
    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < R; j++) {
            printf("%4d　", a[i][j]);
        }
        printf("\n");
    }
    aver(a);
    sort(a);
    printf("\n排序後成績：\n");
    printf("學號　  數學　計概　平均　名次\n");
    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < R; j++) {
            printf("%4d　", a[i][j]);
        }
        printf("%4d\n",i+1);
    }
    printf("\n最高平均成績\n學號：%d\n數學：%d\n計概：%d\n平均：%d\n", a[0][0], a[0][1], a[0][2], a[0][3]);
    printf("\n最低平均成績\n學號：%d\n數學：%d\n計概：%d\n平均：%d\n", a[9][0], a[9][1], a[9][2], a[9][3]);
    printf("\n平均中位數：%d", a[(0 + 9) / 2][3]);
}

void aver(int b[SIZE][R]) {
    for (int i = 0; i < SIZE; i++) {
        b[i][3] = (b[i][1] + b[i][2]) / 2;
    }
}
void sort(int c[SIZE][R]) {
    for (int pass = 1; pass < SIZE; pass++) {
        for (int i = 0; i < SIZE - pass; i++) {
            if (c[i][3] < c[i + 1][3]) {
                swap(&c[i][3], &c[i + 1][3]);
                swap(&c[i][0], &c[i + 1][0]);
                swap(&c[i][1], &c[i + 1][1]);
                swap(&c[i][2], &c[i + 1][2]);
            }
        }
    }
}
void swap(int* e1Ptr, int* e2Ptr) {
    int hold = *e1Ptr;
    *e1Ptr = *e2Ptr;
    *e2Ptr = hold;
}
