text1

#include <stdio.h>
#include <ctype.h>

int main(void) {
	char s1[] = "Hd4hTrh2b5 ";
	char s2[] = "Hd4hTrh2b5 ";
	
	int cnta = 0; //小寫
	int cntA = 0; //大寫
	int cnt1 = 0; //數字
	
	int i =0;
	
	 while(s2[i] != '\0'){
	 	if (islower(s2[i])){
	 		cnta += 1;
	 		s1[i] = toupper(s2[i]);
	 	}
	 	if(isupper(s2[i])){
	 		cntA += 1;
	 		s1[i] = tolower(s2[i]);
		}
		if(isdigit(s2[i])){
	 		cnt1 += 1;
	 		s1[i] = s2[i];
		}
		
		 i++;
	 }
	
	printf("字串小寫數量：%d  字串大寫數量：%d  字串有%d個數字",cnta,cntA,cnt1);
	printf("\n原本字串%s大小寫轉換後為：%s\n",s2,s1);
	system("PAUSE");
}

text2

#include <stdio.h>
#include <string.h>

int main(void) {
	
	char s1[13] = "ABcdEfABCdeF";
	char s2[13] = "AB";
	
	int cnt = 0; 
	int i ;
	
	for (i=0;i<12;i++){
	 	if(strncmp(s2,s1+i,2) == 0)
	 	  cnt += 1;
	}
	
	printf("\n字串%s在字串%s中出現%d次\n",s2,s1,cnt);
	system("PAUSE");
	return 0;
}

text3

#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main(void) {
	
	char s1[] = "ABcd13.58EfABC5.6148deF";
	char *s1ptr = &s1[0];
	
	int i ;
	
	while (*s1ptr != 0){
	 	if(!isdigit(*s1ptr))
	 	  s1ptr ++;
	 	else {
	 		double d = strtod(s1ptr,&s1ptr);
	 		printf("%.2lf\n",d);
		 }
	}
	
	system("PAUSE");
	return 0;
}

