int main( void )
{

   int a,b,c,max,min;
   int sum,av,ta;
   
   printf("Enter 3 integers\n");
   scanf( "%d" "%d" "%d",&a,&b,&c);

   max = a;
	if (max<b)
		max = b;
	if (max<c)
		max = c;

	min = a;
	if (min > b)
		min = b;
	if (min > c)
		min = c;

   sum=a+b+c;
   av=(a+b+c)/3;
   ta=a*b*c;
   
   printf("max is %d , min is %d\n", max, min);
   printf("sum is %d , av is %d , ta is %d", sum,av,ta);
   
      } 
	   
