#include <stdio.h>

int main(void)
{
	int v;
	int a;
	int e;
	printf("Enter v\n");

	scanf_s("%d", &v);

	printf("Enter a\n");
	scanf_s("%d", &a);
	printf("Enter e\n");
	scanf_s("%d", &e);
	int V;
	int S;
	V = v + a * e;
	S = v * e + 1 / 2 * a * e ^ 2;
	printf("V is %d\n", V);
	printf("S is % d\n",S);
}
