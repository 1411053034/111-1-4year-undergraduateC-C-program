1.
#include <stdio.h>
#include <string.h>
#include<ctype.h>
int main()
{
	 char a[] = "abcDEF6";
	 char b[] = "abcDEF6";
	int i = 0, up=0 , low=0, num=0;
	while (a[i] !='\0')
	{
		if ('0'<=a[i] && a[i]<='9')
		{
			num ++;
			b[i] = a[i];
		}
		else if ('a' <= a[i] && a[i] <= 'z') {
			low ++;
			b[i] = toupper(a[i]);
		}
		else if ('A' <= a[i] && a[i] <= 'Z')
		{
			up ++;
			b[i] = tolower(a[i]);
		}
		i++;

	}
		printf("數字有%d個\n", num);
		printf("英文小寫有%d個\n", low);
		printf("英文大寫有%d個\n", up);
		printf("原始字串%s\n", a);
		printf("轉換後字串=%s\n", b);


}
-----------------------------------

2.
#include <stdio.h>
#include <string.h>
#include<ctype.h>
int main()
{
	 char s1[17] = "abcdefababcdefgh";
	 char s2[] = "def";
	 int num = 0;
	 for (int i = 0; i < 17; i++)
	 {
		 if(strncmp(s2, s1 + i, 3) == 0)
		 {
			 num++;
		 }
	 }
	 printf("%s在%s出現的次數為%d個", s2, s1, num);
}
--------------------------------------------
3.
#include <stdio.h>
#include <string.h>
#include<ctype.h>
#include <stdlib.h>
int main()
{
	 char s1[] = "abc2.34ababc3.8gh4.4xyz";
	 char* sptr;
	 double s2=0.0;
	 int i = 0;
	 int key = 0;
	 for ( i = 0; i < 24; i++)
	 {
		 
		 if ( isdigit(s1[i]) != 0 && key==0) {
			 s2 = strtod(s1 + i, &sptr);
			 printf("%.2f\n", s2);
			 key = 1;
		 }
		 if (isdigit(s1[i]) == 0 && s1[i]!='.')
		 {
			 key = 0;
		 }
		
		
	 }
	 
}
