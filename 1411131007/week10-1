#include <iostream>
#define SIZE 5 

void sub1(int n[],size_t size);

int main(void)
{
	int n[SIZE] = {19,3,15,7,11},i;
	
	printf("%s%13s%17s\n","Element","Value","Histogram");
	
	for (i=0;i<SIZE;++i){
		printf("%7u%13d        ",i,n[i]);
		sub1(n,n[i]);
    }
}


void sub1(int n[],size_t size)
{
	int j;
	for (j=1;j<size;++j){
		printf("%c",'*');	
 	}
	puts("");
}
