#include <stdio.h>
#include <math.h>  

int main(void)
{
    double principal = 5000.0;
    double rate = 0.02;
    int period;

    printf("輸入第一年本金:");
    scanf("%lf", &principal);

    printf("輸入定存利率(%%):");
    scanf("%lf", &rate);

    printf("輸入定存時間(年):");
    scanf("%d", &period);
    
    
    printf("\nYear      Amount on deposit\n");
    
    for (unsigned int year = 1 ; year <= period ; ++year) {

        double amount = principal * pow(1.0 + rate, year);

        printf("%4u%21.2f\n", year, amount);
    }
}
