#include <stdio.h>
#define SIZE 10

void sort(int a[][SIZE], int size);
void swap(int* e1Ptr, int* e2Ptr);

int main(void)
{
	int i;
	int a[2][SIZE] = { { 12,13,14,15,16,17,19,21,22,23 }
					  ,{ 66,67,65,70,73,74,75,76,62,32 } };

	puts("Data items in original order");

	for (i = 0; i < SIZE; ++i) {
		printf("%4d", a[0][i]);
	}

	printf("\n");
	for (i = 0; i < SIZE; ++i) {
		printf("%4d", a[1][i]);
	}

	sort(a, SIZE);
	
	puts("\nData items in ascending order");
	for (i = 0; i < SIZE; ++i) {
		printf("%4d", a[0][i]);
	}
	printf("\n");
	for (i = 0; i < SIZE; ++i) {
		printf("%4d", a[1][i]);
	}
	puts("");
}

void sort(int a[][SIZE], int size)
{
	int i, pass;
	for (pass = 1; pass < SIZE; ++pass) {

		for (i= 0; i < SIZE - 1; ++i) {

			if (a[1][i] > a[1][i + 1]) {
				swap(&a[1][i], &a[1][i + 1]);
				swap(&a[0][i], &a[0][i + 1]);
			}
		}
	}
}
void swap(int* e1Ptr, int* e2Ptr)
{
	int hold = *e1Ptr;
	*e2Ptr = *e1Ptr;
	*e2Ptr = hold;
}
