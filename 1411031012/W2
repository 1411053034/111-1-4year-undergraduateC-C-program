//2-17 (P97)
#include <iostream>

int main()
{
    int v, a, e,V,s;
    printf("Enter v= ");
    scanf_s("%d", &v);
    printf("Enter a= ");
    scanf_s("%d", &a);
    printf("Enter e= ");
    scanf_s("%d", &e);

    V = v + a * e;
    s=v*e+((1/2)*a*e*e);
       printf("V is %d\n", V);
       printf("s is % d\n", s);
}
