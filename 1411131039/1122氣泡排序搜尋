#include <stdio.h>
#define SIZE 10
void test(int b[], int d[]);
void s(int b[], int d[]);
int main()
{
    int hold,y;
    int a[SIZE] = { 2,6,4,8,10,12,89,68,45,37 };
    int c[SIZE] = { 66,67,66,70,73,74,75,75,62,32 };
    for (int p = 0; p < SIZE; p++) {
        printf("%4d", a[p]);
    }
    printf("\n");
    for (int p = 0; p <SIZE; p++) {
        printf("%4d", c[p]);
    }
    puts("\n經氣泡排序法，成績由小到大");
    test(a, c);
    for (int p = 0; p <SIZE; p++) {
        printf("%4d", a[p]);
    }
    printf("\n");
    for (int p = 0; p <SIZE ; p++) {
        printf("%4d", c[p]);
    }
    s(a, c);
}
void test(int b[],int d[]) {
    for (int pass = 1; pass < SIZE; pass++) {
        for (int i = 0; i < SIZE - pass; i++) {
            if (d[i] > d[i + 1]) {
                int hold=0, y=0;
                hold = d[i];
                d[i] = d[i + 1];
                d[i + 1] = hold;
                y = b[i];
                b[i] = b[i + 1];
                b[i + 1] = y;
            }
        }
    }
}
void s(int b[], int d[]) {
    printf("\n請輸入要查詢成績的座號：");
    int n;
    int j=0;
    scanf_s("%d", &n);
    for (int i = 0; i <= SIZE - 1; i++) {
        if(n==b[i]){
            printf("座號是%d，成績為%d", b[i], d[i]);
            break;
        }
        else {
            j++;
        }
    }
    if (j >= 9)
        printf("此座號查無此人");
}
