#include <stdio.h>
#include <stdlib.h>

int main(void) {
	printf("Enter three different integers:");
	int n1,n2,n3;
	scanf("%d %d %d",&n1,&n2,&n3);
	int sum,average,product,min,max;
	sum=n1+n2+n3;
	average=sum/3;
	product=n1*n2*n3;
	min=n1;
	max=n1;
	if(min<n2){
		if(min<n3){		
		}
		else{
			min=n3;
		}
	}
	else{
		min=n2;
		if(min<n3){
		}
		else{
			min=n3;
		}
	}
	
	if(max>n2){
		if(max>n3){		
		}
		else{
			max=n3;
		}
	}
	else{
		max=n2;
		if(max>n3){
		}
		else{
			min=n3;
		}
	}
	printf("Sum is %d\n",sum);
	printf("Average is %d\n",average);
	printf("Product is %d\n",product);
	printf("Smallest is %d\n",min);
	printf("Largest is %d",max);
}
