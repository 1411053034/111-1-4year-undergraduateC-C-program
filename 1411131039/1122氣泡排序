#include <stdio.h>
#define SIZE 10
void test(int b[], int d[]);
int main()
{
    int hold,y;
    int a[SIZE] = { 2,6,4,8,10,12,89,68,45,37 };
    int c[SIZE] = { 66,67,66,70,73,74,75,75,62,32 };
    for (int p = 0; p < SIZE; p++) {
        printf("%4d", a[p]);
    }
    printf("\n");
    for (int p = 0; p <SIZE; p++) {
        printf("%4d", c[p]);
    }
    puts("\n經氣泡排序法，成績由小到大");
    test(a, c);
    for (int p = 0; p <SIZE; p++) {
        printf("%4d", a[p]);
    }
    printf("\n");
    for (int p = 0; p <SIZE ; p++) {
        printf("%4d", c[p]);
    }
}
void test(int b[],int d[]) {
    for (int pass = 1; pass < SIZE; pass++) {
        for (int i = 0; i < SIZE - pass; i++) {
            if (d[i] > d[i + 1]) {
                int hold = d[i];
                d[i] = d[i + 1];
                d[i + 1] = hold;
                int y = b[i];
                b[i] = b[i + 1];
                b[i + 1] = y;
            }
        }
    }
}
