#include <stdio.h>
#define STUDENTS 3
#define EXAMS 6

double average(int setOfGrades[], int tests);
void printArray(int grades[][EXAMS], int pupils, int tests);

int main(void)
{
    int studentGrades[STUDENTS][EXAMS] =
    { {012, 77, 68, 86, 73, 0},
      {006, 96, 87, 89, 89, 0},
      {010, 70, 90, 86, 81, 0} };

    puts("the array is: \n");
    printArray(studentGrades, STUDENTS, EXAMS);

    int student;
    for (student = 0; student < STUDENTS; ++student) {
        
        printf("\nthe average grade for student %d is %.2f",
            student, average(studentGrades[student], EXAMS));
    }
}
    double average(int setOfGrades[], int tests) {
        int total = 0;
        int test;

        for (test = 0; test < tests; ++test) {
            total += setOfGrades[test];
        }
        return(double)total / tests;
    }




    void printArray(int grades[][EXAMS], int pupils, int tests) {
        printf("%s", "                     [0]  [1]  [2]  [3]");
        

        int row,column;
        for (row = 0; row < pupils; ++row) {
            printf("\nstudentGrades[%d]", row);

            for (column = 0; column < tests; ++column) {
                printf("%-5d", grades[row][column]);
                
            }
        }
        printf("\n");
    }
