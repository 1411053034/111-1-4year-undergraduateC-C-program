#include <stdio.h>
#define SIZE 10		
	int id[SIZE] = { 2,6,4,8,10,12,89,68,45,37 },c,i,j=0;
	int score [SIZE] = { 66,67,66,70,73,74,75,75,62,32 };
	void sort(int a[SIZE], int b[SIZE]);
	int search(int a[],int );
int main(void) {
	
	puts("Data items in original order");
	for (size_t i = 0; i < SIZE; i++)
	{
		printf("%4d", id[i]);
		printf("%4d\n", score[i]);
	}
	
	sort(id, score);
	puts("\nData items in ascending order");
	for (size_t i = 0; i < SIZE; i++)
	{
		printf("%4d", id[i]);
		printf("%4d\n", score[i]);
		
	}
	
	scanf("%d", &c);
	j = search(id,c);
	if (j >= 9)printf("student %d was not found",c);
	else printf("student %d got %d!", id[j], score[j]);
	
	



	puts("");
	
}
void sort(int a[], int b[])
{
	for (int pass = 1; pass < SIZE; pass++)
	{
		for (size_t i = 0; i < SIZE - 1; i++)
		{
			if (score[i] > score[i + 1])
			{
				int scorea = score[i];
				int ida = id[i];
				id[i] = id[i + 1];
				id[i + 1] = ida;
				score[i] = score[i + 1];
				score[i + 1] = scorea;
			}
		}
	}

}

int search(int a[], int c) {
	
	for ( i = 0; i < SIZE; i++)
	{
		if (c==a[i])
		{
			return i;
		}
		else
		{
			i++;
		}
		
	}
	return i;
}
