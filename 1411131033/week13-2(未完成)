#include <stdio.h>
#define SIZE 10
#define STUDENTS 10
#define EXAMS 2
void sort ( int a[][SIZE],int size);
int key,result;
void swap (int *element1Ptr, int *element2Ptr);

int main(void){
	
	
	int a[4][SIZE] = {{12,13,14,15,16,17,19,21,22,23},{66,67,66,70,73,74,75,75,62,32},{50,55,60,67,71,78,74,70,68,72},{58,61,63,69,72,76,75,73,65,52}};
	
	puts("Date items in original order");
	int i;
	printf("學號  ");
	for ( i = 0 ; i<SIZE ;++i){	
		printf("%4d",a[0][i]);
	}
	printf("\n");
	printf("數學  ");
	for ( i = 0 ; i<SIZE ;++i){
		printf("%4d",a[1][i]);	
	}
	printf("\n");
	printf("計概  ");
	for ( i = 0 ; i<SIZE ;++i){
		printf("%4d",a[2][i]);	
	}
	printf("\n");
	printf("平均  ");
	for ( i = 0 ; i<SIZE ;++i){	
		printf("%4d",a[3][i]);
	}
	sort (a,SIZE);
	puts("\nDate items in ascending order");
	printf("學號  ");
	for ( i = 0 ; i<SIZE ;++i){
		printf("%4d",a[0][i]);
	}
	printf("\n");
	printf("數學  ");
	for ( i = 0 ; i<SIZE ;++i){
		printf("%4d",a[1][i]);	
	}
	printf("\n");
	printf("計概  ");
	for ( i = 0 ; i<SIZE ;++i){
		printf("%4d",a[2][i]);	
	}
	printf("\n");
	printf("平均  ");
	for ( i = 0 ; i<SIZE ;++i){	
		printf("%4d",a[3][i]);
	}
	puts("");
	
	
}
int i;
void sort (int a[][SIZE],int size){
	int pass,hold;
	for ( pass = 1 ; pass < SIZE ;++pass){
	  for ( i = 0 ; i < SIZE-1 ;++i){
	  	if (a[3][i] < a[3][i+1]){
	  		swap(&a[0][i],&a[0][i+1]);
	  		swap(&a[1][i],&a[1][i+1]);
	  		swap(&a[2][i],&a[2][i+1]);
	  		swap(&a[3][i],&a[3][i+1]);
		  }
	   }
	}
}

void swap (int *element1Ptr, int *element2Ptr)
	{
		int hold = *element1Ptr;
		*element1Ptr = *element2Ptr;
		*element2Ptr = hold;
	}
	
