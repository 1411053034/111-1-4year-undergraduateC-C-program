#include <stdio.h>
#define SIZE 5

void histograms(int s[], int i, int j);
int main()
{
	int j,i=0;
	int s[SIZE];
	for (j = 0; j < SIZE; j++) {
		s[j] = 2 + 2 * j;
	}
	printf("%s%13s%17s\n", "Element", "Value","Histograms");

	histograms(s, i, j);
}
	void histograms(int s[], int i, int j) {

		for (i = 0; i < SIZE; i++) {
			printf("%7u%13d          ", i, s[i]);
		

			for (j = 0; j < s[i]; j++) {
				printf("%c", '*');

			}
			puts("");
		}
	}


