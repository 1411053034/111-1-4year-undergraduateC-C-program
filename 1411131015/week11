原本P319(沒副程式)
#define SIZE 10

int main(void) {
	int a[SIZE] = {2,6,4,8,10,12,89,68,45,37};
	
	puts("Data items in original order");
	
	int i,pass;
	
	for( i=0; i<SIZE; ++i) {
		printf("%4d",a[i]);
		
	} 

	
	for(pass=1; pass<SIZE; ++pass){
		for(i =0; i<SIZE-1; ++i){
			if(a[i]>a[i+1]){
				int hold = a[i];
				a[i] = a[i+1];
				a[i+1] = hold;
			
			}
	
		}
		
	}
	puts("\nData items in ascending order");
	
	for (i = 0; i < SIZE; ++i) {
        printf("%4d", a[i]);
    }

    puts("");
}


成績由小到大(沒副程式)
#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

#define SIZE 10

int main(void) {
	int a[SIZE] = {2,6,4,8,10,12,89,68,45,37};
	int s[SIZE] = {66,67,66,70,73,74,75,75,62,32};
	
	puts("Data items in original order");
	
	int i,pass;
	
	for( i=0; i<SIZE; ++i) {
		printf("%4d",a[i]);
		
	} 
	 printf("\n");
	 
	 for (i = 0; i < SIZE; ++i) {
        printf("%4d", s[i]);
    }

	
	for(pass=1; pass<SIZE; ++pass){
		for(i =0; i<SIZE-1; ++i){
			if(s[i]>s[i+1]){
				int hold = a[i];
				a[i] = a[i+1];
				a[i+1] = hold;
				hold = s[i];
				s[i] = s[i+1];
				s[i+1] = hold;
			
			}
		}
	}
	puts("\nData items in ascending order");
	
	for (i = 0; i < SIZE; ++i) {
        printf("%4d", a[i]);
    }
    
    puts("");
    
	for (i = 0; i < SIZE; ++i) {
        printf("%4d", s[i]);
    }
    puts("");
}



成績排序(有副程式)
#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

#define SIZE 10

int main(void) {
	int a[SIZE] = {2,6,4,8,10,12,89,68,45,37};
	int s[SIZE] = {66,67,66,70,73,74,75,75,62,32};
	
	puts("Data items in original order");
	
	int i,pass;
	
	for( i=0; i<SIZE; ++i) {
		printf("%4d",a[i]);
		
	} 
	 printf("\n");
	 
	 for (i = 0; i < SIZE; ++i) {
        printf("%4d", s[i]);
    }

	sort(a,s,SIZE);
	
	puts("\nData items in ascending order");
	
	for (i = 0; i < SIZE; ++i) {
        printf("%4d", a[i]);
    }
    
    puts("");
    
	for (i = 0; i < SIZE; ++i) {
        printf("%4d", s[i]);
    }
    puts("");
}





sort(int a[], int s[], int size){
	int pass,i;
	for(pass=1; pass<SIZE; ++pass){
		for(i =0; i<SIZE-1; ++i){
			if(s[i]>s[i+1]){
				int hold = a[i];
				a[i] = a[i+1];
				a[i+1] = hold;
				hold = s[i];
				s[i] = s[i+1];
				s[i+1] = hold;
			
			}
		}
	}
}
